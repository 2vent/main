<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/eText_join_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="아이디"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:id="@+id/eText_join_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="비밀번호"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:id="@+id/eText_join_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="성명"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:id="@+id/eText_join_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="주소"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:id="@+id/eText_join_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="생년월일(ex.19900102)"
            android:singleLine="true"
            android:lines="1"/>

        <EditText
            android:id="@+id/eText_join_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="연락처"
            android:singleLine="true"
            android:lines="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="18sp"/>

            <RadioGroup
                android:id="@+id/rGroup_join1"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:textSize="18sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"
                android:textSize="18sp"/>
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구분"
                android:textSize="18sp"/>

            <RadioGroup
                android:id="@+id/rGroup_join2"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객"
                android:textSize="18sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점장"
                android:textSize="18sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업주"
                android:textSize="18sp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:onClick="onClick_joinOK"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="가입"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>