<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/com_form_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Company" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/com_form_name"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:text="업소명 :" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="32dp"
                android:text="주소 :" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/com_form_addr"
                android:layout_marginTop="39dp"
                android:text="카테고리" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="98dp"
                android:text="매니저" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/com_form_manager"
                android:layout_marginTop="11dp"
                android:text="사업자 등록번호 :" />

            <EditText
                android:id="@+id/com_form_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_name"
                android:layout_alignStart="@+id/com_form_name"
                android:layout_alignTop="@+id/textView7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <RadioButton
                android:id="@+id/com_form_radio_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_addr"
                android:layout_alignStart="@+id/com_form_addr"
                android:layout_alignTop="@+id/textView8"
                android:text="문화" />

            <RadioButton
                android:id="@+id/com_form_radio_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/com_form_radio_culture"
                android:layout_toEndOf="@+id/com_form_radio_culture"
                android:layout_toRightOf="@+id/com_form_radio_culture"
                android:text="음식" />

            <RadioButton
                android:id="@+id/com_form_radio_butty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_radio_culture"
                android:layout_alignStart="@+id/com_form_radio_culture"
                android:layout_below="@+id/com_form_radio_culture"
                android:text="뷰티" />

            <RadioButton
                android:id="@+id/com_form_radio_fashion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/com_form_radio_food"
                android:layout_toEndOf="@+id/com_form_radio_butty"
                android:layout_toRightOf="@+id/com_form_radio_butty"
                android:text="패션" />

            <RadioButton
                android:id="@+id/com_form_radio_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_radio_butty"
                android:layout_alignStart="@+id/com_form_radio_butty"
                android:layout_below="@+id/com_form_radio_butty"
                android:text="여행" />

            <Spinner
                android:id="@+id/com_form_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_radio_travel"
                android:layout_alignStart="@+id/com_form_radio_travel"
                android:layout_alignTop="@+id/textView9" />

            <ImageView
                android:id="@+id/com_form_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView10"
                android:layout_alignRight="@+id/textView10"
                android:layout_below="@+id/com_form_number"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_manager"
                android:layout_alignStart="@+id/com_form_manager"
                android:layout_alignTop="@+id/com_form_iv"
                android:text="사진 촬영" />

            <EditText
                android:id="@+id/com_form_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/com_form_manager"
                android:layout_alignStart="@+id/com_form_manager"
                android:layout_alignTop="@+id/textView10"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
